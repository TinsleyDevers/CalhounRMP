{
  "manifest_version": 3,
  "name": "Rate My Professor - Calhoun CC",
  "version": "1.2",
  "description": "Displays Rate My Professor ratings directly on the Calhoun Community College class registration page.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.ratemyprofessors.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://experience.elluciancloud.com/*",
        "https://reg-prod.ec.accs.edu/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
